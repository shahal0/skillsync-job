# Job Service Environment Variables

# Server Configuration
PORT=50052
ENV=development # Set to 'production' in production environment

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_NAME=skillsync_jobs
DB_SSL_MODE=disable

# Service Dependencies
AUTH_SERVICE_URL=localhost:50051
NOTIFICATION_SERVICE_URL=localhost:50053

# Search Engine Configuration (for job search)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# File Storage (for resumes/attachments)
STORAGE_TYPE=local # local, s3, gcs
STORAGE_PATH=./uploads
# If using cloud storage:
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-west-2
# AWS_BUCKET_NAME=skillsync-attachments

# Logging
LOG_LEVEL=info # debug, info, warn, error
